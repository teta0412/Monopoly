<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Buy"
        android:id="@+id/popButton"
        android:layout_marginTop="94dp"
        android:layout_weight="0.36"
        android:background="@drawable/buttonleft"
        android:layout_gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#0fff12" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Rent"
        android:id="@+id/pay_Rent"
        android:layout_weight="0.29"
        android:background="@drawable/buttonright"
        android:layout_alignTop="@+id/popButton"
        android:layout_toEndOf="@+id/popButton"
        android:textColor="#fdff21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/status_id"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textColor="#0b0bff" />

</RelativeLayout>